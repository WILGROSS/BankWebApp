@page
@model BankWebApp.Pages.CustomersModel
@{
}
<div id="customers-table">
    <div class="container">
        <div class="search-info">
            @if (Model.TotalCount > 0)
            {
                <div class="info">
                    Displaying @Math.Min(Model.LoadedRows, Model._customers.Count) of @Model.TotalCount
                </div>
            }
            else
            {
                    <div class="info">No results were found matching search criteria</div>
            }
                <div class="search-bar">
                    <form method="get" asp-page="/Customers">
                        <input type="text" name="searchQuery" />
                        <button class="btn-medium"type="submit">Search &nbsp;<i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">
                        Name
                        <a asp-page="/Customers"
                           asp-route-sortColumn="Name"
                           asp-route-sortOrder="asc"
                           asp-route-searchQuery="@Request.Query["searchQuery"]"
                           asp-route-loadedRows="@Request.Query["loadedRows"]"
                           style="text-decoration:none">
                           <i class="fa-solid fa-angle-up"></i>
                        </a>
                        
                        <a asp-page="/Customers"
                           asp-route-sortColumn="Name"
                           asp-route-sortOrder="desc"
                           asp-route-searchQuery="@Request.Query["searchQuery"]"
                           asp-route-loadedRows="@Request.Query["loadedRows"]"
                           style="text-decoration:none">
                           <i class="fa-solid fa-angle-down"></i>
                        </a>
                    </th>
                    <th scope="col">
                        Country
                        <a asp-page="/Customers"
                           asp-route-sortColumn="Country"
                           asp-route-sortOrder="asc"
                           asp-route-searchQuery="@Request.Query["searchQuery"]"
                           asp-route-loadedRows="@Request.Query["loadedRows"]"
                           style="text-decoration:none">
                           <i class="fa-solid fa-angle-up"></i>
                        </a>
        
                        <a asp-page="/Customers"
                           asp-route-sortColumn="Country"
                           asp-route-sortOrder="desc"
                           asp-route-searchQuery="@Request.Query["searchQuery"]"
                           asp-route-loadedRows="@Request.Query["loadedRows"]"
                           style="text-decoration:none">
                           <i class="fa-solid fa-angle-down"></i>
                        </a>
                    </th>
                                <th scope="col">
                        City
                        <a asp-page="/Customers"
                           asp-route-sortColumn="City"
                           asp-route-sortOrder="asc"
                           asp-route-searchQuery="@Request.Query["searchQuery"]"
                           asp-route-loadedRows="@Request.Query["loadedRows"]"
                           style="text-decoration:none">
                           <i class="fa-solid fa-angle-up"></i>
                        </a>
        
                        <a asp-page="/Customers"
                           asp-route-sortColumn="City"
                           asp-route-sortOrder="desc"
                           asp-route-searchQuery="@Request.Query["searchQuery"]"
                           asp-route-loadedRows="@Request.Query["loadedRows"]"
                           style="text-decoration:none">
                           <i class="fa-solid fa-angle-down"></i>
                        </a>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cust in Model._customers)
                {
                    <tr>
                        <td>@cust.CustomerId</td>
                        <td>@cust.FirstName @cust.LastName</td>
                        <td>@cust.Country</td>
                        <td>@cust.City</td>
                        <td>
                            <a asp-page="/Supplier" asp-route-id="@cust.CustomerId"
                                       class="btn btn-primary"><i class="fa-solid fa-angle-right"></i>&nbsp;View</a>
                        </td>
                    </tr>
                }
        
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        @if (Model._customers.Count < Model.TotalCount)
                        {
                            <form method="get" asp-page="/Customers">
                                <input type="hidden" name="sortColumn" value="@Request.Query["sortColumn"]" />
                                <input type="hidden" name="sortOrder" value="@Request.Query["sortOrder"]" />
                                <input type="hidden" name="searchQuery" value="@Request.Query["searchQuery"]" />
                                <input type="hidden" name="loadedRows" value="@(Model.LoadedRows + 12)" />
                                <button class ="btn-medium"type="submit" class="btn btn-primary">Load More</button>
                            </form>
                        }
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>