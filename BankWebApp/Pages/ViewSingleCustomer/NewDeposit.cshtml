@page
@model BankWebApp.Pages.ViewSingleCustomer.NewDepositModel
@{
}

<section id="new-deposit">
	<div class="container">
		<div class="title">
			<h2>New cash deposit into account @Model._account.AccountId</h2>
		</div>
		<form method="post">
			<input type="hidden" asp-for="_newDeposit.TransactionId">
			<input type="hidden" asp-for="_newDeposit.AccountId">
			<input type="hidden" asp-for="_newDeposit.Type">
			<input type="hidden" asp-for="_newDeposit.Operation">
			<input type="hidden" asp-for="_newDeposit.Date">
			<input type="hidden" asp-for="_newDeposit.Balance">
			<input type="hidden" asp-for="_newDeposit.Amount">
			<div class="form-card">
				<div class="form-header">
					<a class="btn-discard"asp-page="/ViewSingleCustomer/ViewAccount" asp-route-id="@Model._account.AccountId">
						<span class="text">Cancel deposit</span>
						<span class="material-symbols-outlined">close</span>
					</a>
				</div>
				<div class="form-part">
					<h4>Current Account Balance: @Model._account.Balance</h4>
					<div class="form-line">
						<div class="form-group">
							<label asp-for="_newDeposit.AmountInput"></label>
							<input type="text" class="text-field" asp-for="_newDeposit.AmountInput">
							<span asp-validation-for="_newDeposit.AmountInput" class="field-validation-error"></span>
							@Html.ValidationMessage("AmountInput")
						</div>
						<div class="buttons">
							<button class="btn-medium"type="submit">Submit</button>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>