@page
@model LoginModel

@{
    ViewData["Title"] = "Sign in as a cashier or an admin";
}

<section id="sign-in">
    <div class="container">
        <h1 class="title">@ViewData["Title"]</h1>
        <div class="content">
            <form id="account" method="post">
                <div class="form-card">
                    <div class="form-part">
                        <div class="form-line">
                            <div asp-validation-summary="ModelOnly" class="field-validation-error" role="alert"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <input asp-for="Input.Email" class="text-field" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <span asp-validation-for="Input.Email" class="field-validation-error"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <input asp-for="Input.Password" class="text-field" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <span asp-validation-for="Input.Password" class="field-validation-error"></span>
                            </div>
                        </div>
                        <div id="remember-me">
                            <div class="remember-me-check-box">
                                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                                <label class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <button class="btn-large" type="submit">
                        Submit
                        <span class="material-symbols-outlined">check</span>
                    </button>
                </div>
            </form>
            <div class="trouble-box">
                <h2>Trouble signing in? Don't have an account?</h2>
                <p>Contact human resources or spea directly to an administrator</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
